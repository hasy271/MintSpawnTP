-- Services
local Players = game:GetService("Players")

-- Gui
local player = Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "MintHubSpawnTP"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local frame1 = Instance.new("Frame", gui)
frame1.Size = UDim2.fromOffset(200, 100)
frame1.Position = UDim2.new(0.5, 0, 0.20, 0)
frame1.AnchorPoint = Vector2.new(0.5, 0.5)
frame1.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame1.BorderSizePixel = 0
frame1.Active = true
frame1.Draggable = true
Instance.new("UICorner", frame1).CornerRadius = UDim.new(0, 10)

local title = Instance.new("TextLabel", frame1)
title.Size = UDim2.new(1, 0, 0, 35)
title.BackgroundTransparency = 1
title.Text = "Spawn TP üçÄ"
title.TextColor3 = Color3.fromRGB(170, 255, 195)
title.Font = Enum.Font.GothamBold
title.TextSize = 16

local btnTP = Instance.new("TextButton", frame1)
btnTP.Size = UDim2.new(0.85, 0, 0, 40)
btnTP.Position = UDim2.new(0.075, 0, 0.45, 0)
btnTP.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
btnTP.Text = "TP TO SPAWN"
btnTP.TextColor3 = Color3.fromRGB(170, 255, 195)
btnTP.Font = Enum.Font.GothamBold
btnTP.TextSize = 14
Instance.new("UICorner", btnTP)

-- Main
btnTP.MouseButton1Click:Connect(function()
    local spawnPart = game.Workspace:FindFirstChild("SpawnLocation1", true)
    
    if spawnPart and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        player.Character.HumanoidRootPart.CFrame = spawnPart.CFrame * CFrame.new(0, 3, 0)
    end
end)
